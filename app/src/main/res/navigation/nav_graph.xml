<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/WelcomeFragment">

    <fragment
        android:id="@+id/WelcomeFragment"
        android:name="com.example.trainingtracker.WelcomeFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/action_WelcomeFragment_to_SignInFragment"
            app:destination="@id/SignInFragment" />
        <action
            android:id="@+id/action_WelcomeFragment_to_SignUpFragment"
            app:destination="@id/SignUpFragment" />
    </fragment>

    <fragment
        android:id="@+id/SignInFragment"
        android:name="com.example.trainingtracker.SignInFragment"
        android:label="Sign In"
        tools:layout="@layout/fragment_sign_in">

        <action
            android:id="@+id/action_SignInFragment_to_SignUpFragment"
            app:destination="@id/SignUpFragment" />
        <action
            android:id="@+id/action_SignInFragment_to_TrainingsListFragment"
            app:destination="@id/TrainingsListFragment"
            app:popUpTo="@id/WelcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/SignUpFragment"
        android:name="com.example.trainingtracker.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up">

        <action
            android:id="@+id/action_SignUpFragment_to_SignInFragment"
            app:destination="@id/SignInFragment" />
        <action
            android:id="@+id/action_SignUpFragment_to_TrainingsListFragment"
            app:destination="@id/TrainingsListFragment"
            app:popUpTo="@id/WelcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Main app fragments with bottom navigation -->
    <fragment
        android:id="@+id/TrainingsListFragment"
        android:name="com.example.trainingtracker.TrainingsListFragment"
        android:label="Trainings"
        tools:layout="@layout/fragment_trainings_list">
        
        <action
            android:id="@+id/action_TrainingsListFragment_to_AddTrainingFragment"
            app:destination="@id/AddTrainingFragment" />
    </fragment>

    <fragment
        android:id="@+id/AddTrainingFragment"
        android:name="com.example.trainingtracker.AddTrainingFragment"
        android:label="Add Training"
        tools:layout="@layout/fragment_add_training" />

    <fragment
        android:id="@+id/TrainingDetailFragment"
        android:name="com.example.trainingtracker.TrainingDetailFragment"
        android:label="Training Details"
        tools:layout="@layout/fragment_training_detail">
        
        <argument
            android:name="trainingId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/StatisticsFragment"
        android:name="com.example.trainingtracker.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/UserProfileFragment"
        android:name="com.example.trainingtracker.UserProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_user_profile">

        <action
            android:id="@+id/action_UserProfileFragment_to_WelcomeFragment"
            app:destination="@id/WelcomeFragment"
            app:popUpTo="@id/WelcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>